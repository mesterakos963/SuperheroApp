<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonViewRoot"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/design_28dp"
    android:background="@drawable/selector_button_background_selector"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/design_16dp">

    <TextView
        android:id="@+id/buttonViewText"
        style="@style/gothamMedium14"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/design_28dp"
        android:gravity="center"
        android:padding="@dimen/design_6dp"
        android:paddingStart="@dimen/design_8dp"
        android:paddingTop="@dimen/design_6dp"
        android:paddingEnd="@dimen/design_8dp"
        tools:text="Button text"
        android:text="BUTTON"/>
</FrameLayout>
