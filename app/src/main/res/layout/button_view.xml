<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonViewRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button_background_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/buttonViewText"
        android:textAppearance="@style/gothamMedium14"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/design_28dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="@dimen/design_6dp"
        android:paddingBottom="@dimen/design_6dp"
        android:paddingStart="@dimen/design_8dp"
        android:paddingEnd="@dimen/design_8dp"
        tools:text="Button text" />
</FrameLayout>
